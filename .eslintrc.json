{
    "root": true,
    "env": {
        "es2022": true
    },
    "extends": [
        "eslint:recommended"
    ],
    "ignorePatterns": [
        "node_modules/"
    ],
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "object-curly-spacing": [
            "error",
            "never"
        ]
    }
}