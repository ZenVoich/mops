{
	"version": 1,
	"dfx": "0.12.1",
	"canisters": {
		"main": {
			"type": "motoko",
			"main": "backend/main/main-canister.mo"
		},
		"assets": {
			"type": "assets",
			"frontend": {
				"entrypoint": "frontend/dist/index.html"
			},
			"source": ["frontend/dist/"]
		}
	},
	"defaults": {
		"build": {
			"packtool": ""
		}
	},
	"networks": {
		"local": {
			"type": "ephemeral",
			"bind": "127.0.0.1:8000"
		},
		"dev": {
			"type": "persistent",
			"providers": ["https://mainnet.dfinity.network"]
		},
		"ic": {
			"type": "persistent",
			"providers": ["https://mainnet.dfinity.network"]
		}
	}
}
