{
	"version": 1,
	"canisters": {
		"main": {
			"type": "motoko",
			"main": "backend/main/main-canister.mo",
			"declarations": {
				"output": "cli/declarations/main/"
			},
			"dependencies": ["backup"]
		},
		"backup": {
			"type": "motoko",
			"main": "backend/backup/backup-canister.mo",
			"args": "--max-stable-pages=1048576"
		},
		"assets": {
			"type": "assets",
			"frontend": {
				"entrypoint": "frontend/dist/index.html"
			},
			"source": ["frontend/dist/"]
		}
	},
	"defaults": {
		"build": {
			"packtool": "mops sources"
		}
	},
	"dfx": "0.14.2",
	"networks": {
		"staging": {
			"type": "persistent",
			"providers": ["https://icp0.io"]
		},
		"ic": {
			"type": "persistent",
			"providers": ["https://icp0.io"]
		}
	}
}
