{
	"$schema": "./dfx.schema.json",
	"version": 1,
	"canisters": {
		"main": {
			"type": "motoko",
			"main": "backend/main/main-canister.mo",
			"specified_id": "2d2zu-vaaaa-aaaak-qb6pq-cai",
			"declarations": {
				"output": "cli/declarations/main/",
				"node_compatibility": true
			},
			"gzip": true,
			"optimize": "cycles"
		},
		"assets": {
			"type": "assets",
			"build": ["npm run build-frontend"],
			"specified_id": "ogp6e-diaaa-aaaam-qajta-cai",
			"frontend": {
				"entrypoint": "frontend/dist/index.html"
			},
			"source": ["frontend/dist/"]
		},
		"docs": {
			"type": "assets",
			"build": ["npm run build-docs"],
			"frontend": {
				"entrypoint": "docs/build/index.html"
			},
			"source": ["docs/build/"]
		},
		"blog": {
			"type": "assets",
			"build": ["npm run build-blog"],
			"frontend": {
				"entrypoint": "blog/build/index.html"
			},
			"source": ["blog/build/"]
		},
		"cli": {
			"type": "assets",
			"build": ["npm run build-cli-releases"],
			"frontend": {
				"entrypoint": "cli-releases/frontend/dist/index.html"
			},
			"source": [
				"cli-releases/",
				"cli-releases/frontend/dist/"
			]
		},
		"dao-backend": {
			"type": "motoko",
			"main": "backend/dao/main.mo",
			"args": "--enhanced-orthogonal-persistence",
			"specified_id": "rfqzr-yqaaa-aaaam-qdx6a-cai",
			"declarations": {
				"output": "dao-frontend/declarations/dao/"
			},
			"optimize": "cycles"
		},
		"dao-frontend": {
			"type": "assets",
			"build": ["npm run build-dao-frontend"],
			"frontend": {
				"entrypoint": "dao-frontend/dist/index.html"
			},
			"source": [
				"dao-frontend/"
			]
		},
		"play-frontend": {
			"type": "assets",
			"build": ["npm run build-play-frontend"],
			"frontend": {
				"entrypoint": "play-frontend/dist/index.html"
			},
			"source": [
				"play-frontend/"
			]
		},
		"bench": {
			"type": "motoko",
			"main": "cli/commands/bench/bench-canister.mo",
			"declarations": {
				"output": "cli/declarations/bench/",
				"node_compatibility": true
			},
			"remote": {
				"id": {
					"ic": "2222s-4iaaa-aaaaf-ax2uq-cai",
					"staging": "2222s-4iaaa-aaaaf-ax2uq-cai"
				}
			}
		}
	},
	"defaults": {
		"build": {
			"packtool": "mops sources"
		}
	},
	"dfx": "0.27.0",
	"networks": {
		"local_": {
			"type": "ephemeral",
			"bind": "127.0.0.1:4943"
		},
		"staging": {
			"type": "persistent",
			"providers": ["https://icp0.io"]
		},
		"ic": {
			"type": "persistent",
			"providers": ["https://icp0.io"]
		}
	}
}
