{
	"extends": ["@tsconfig/strictest/tsconfig.json"],
	"include": ["**/*.ts", "**/*.js"],
	"exclude": ["node_modules", "dist", "dist.js", "declarations/**/*.js"],
	"compilerOptions": {
		"types": ["node"],
		"target": "ES2021",
		"outDir": "./dist",
		"allowJs": true,
		"module": "nodenext",
		"moduleResolution": "nodenext",
		"noEmitOnError": false,
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"noPropertyAccessFromIndexSignature": false,
		"declaration": true
	}
}