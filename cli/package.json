{
	"name": "ic-mops",
	"version": "0.27.2",
	"type": "module",
	"bin": {
		"mops": "dist/cli.js"
	},
	"files": [
		"*",
		"!network.txt",
		"!.mops",
		"/templates"
	],
	"homepage": "https://mops.one",
	"repository": {
		"type": "git",
		"url": "https://github.com/ZenVoich/mops.git"
	},
	"author": "Zen Voich <zen.voich@gmail.com>",
	"license": "MIT",
	"engines": {
		"node": ">=16.0.0"
	},
	"scripts": {
		"build": "tsc",
		"bundle": "esbuild --bundle --outfile=cli.js --platform=node --packages=external --target=node16 --format=esm ./dist/cli.js",
		"copy": "cp -r declarations templates network.txt package.json dist | true",
		"save-network": "cp -r dist/network.txt . | true",
		"prepare": "npm run save-network && npm run build && npm run copy",
		"check": "tsc --project tsconfig.json --noEmit",
		"tsc": "tsc",
		"esbuild": "esbuild"
	},
	"dependencies": {
		"@dfinity/agent": "^0.18.1",
		"@dfinity/candid": "^0.18.1",
		"@dfinity/identity": "^0.18.1",
		"@dfinity/identity-secp256k1": "^0.18.1",
		"@dfinity/principal": "^0.18.1",
		"@iarna/toml": "^2.2.5",
		"as-table": "^1.0.55",
		"cacheable-request": "10.2.12",
		"camelcase": "^7.0.1",
		"chalk": "^5.3.0",
		"chokidar": "^3.5.3",
		"commander": "^11.0.0",
		"debounce": "^1.2.1",
		"decompress": "^4.2.1",
		"del": "^7.0.0",
		"dhall-to-json-cli": "^1.7.6",
		"eslint": "^8.45.0",
		"execa": "7.1.1",
		"get-folder-size": "^4.0.0",
		"glob": "^10.3.3",
		"globby": "^13.2.2",
		"got": "13.0.0",
		"log-update": "^5.0.1",
		"mdast-util-from-markdown": "^2.0.0",
		"mdast-util-to-markdown": "^2.1.0",
		"minimatch": "^9.0.3",
		"ncp": "^2.0.0",
		"node-fetch": "^3.3.2",
		"pem-file": "^1.0.1",
		"prompts": "^2.4.2",
		"stream-to-promise": "^3.0.0",
		"tar": "^6.1.15"
	},
	"devDependencies": {
		"@tsconfig/strictest": "^2.0.1",
		"@types/debounce": "^1.2.1",
		"@types/decompress": "^4.2.4",
		"@types/glob": "^8.1.0",
		"@types/ncp": "^2.0.5",
		"@types/node": "^20.4.4",
		"@types/prompts": "^2.4.4",
		"@types/stream-to-promise": "^2.2.1",
		"@types/tar": "^6.1.5",
		"esbuild": "^0.18.16",
		"tsx": "^3.12.7",
		"typescript": "^5.1.6"
	}
}
