{
  "name": "ic-mops",
  "version": "0.39.2",
  "type": "module",
  "bin": {
    "mops": "bin/mops.js",
    "ic-mops": "bin/mops.js",
    "moc-wrapper": "bin/moc-wrapper.sh"
  },
  "files": [
    "*",
    "!network.txt",
    "!.mops",
    "/templates"
  ],
  "homepage": "https://mops.one",
  "repository": {
    "type": "git",
    "url": "https://github.com/ZenVoich/mops.git"
  },
  "author": "Zen Voich <zen.voich@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsc",
    "bundle": "rm -rf ./bundle && bun build ./cli.ts --outdir ./bundle --target node --minify --external @napi-rs/lzma && npm run bundle:copy && npm run bundle:package-json && npm run bundle:tar",
    "bundle:fix": "npx rexreplace '^(#!.+\\n)?' '$1import { createRequire as createImportMetaRequire } from \"module\"; import.meta.require ||= (id) => createImportMetaRequire(import.meta.url)(id);\\n' -GM bundle/cli.js",
    "bundle:copy": "cp -r commands/bench bundle/commands && cp -r bin declarations templates network.txt package.json bundle",
    "bundle:package-json": "tsx bundle-package-json.ts",
    "bundle:tar": "cd bundle && tar -czvf cli.tgz *",
    "copy": "cp -r commands/bench dist/commands && cp -r declarations templates package.json dist | true",
    "save-network": "cp -r dist/network.txt . | true",
    "prepare": "npm run save-network && npm run build && npm run copy",
    "check": "tsc --project tsconfig.json --noEmit",
    "tsc": "tsc",
    "esbuild": "esbuild"
  },
  "dependencies": {
    "@dfinity/agent": "^0.19.3",
    "@dfinity/candid": "^0.19.3",
    "@dfinity/identity": "^0.19.3",
    "@dfinity/identity-secp256k1": "^0.19.3",
    "@dfinity/principal": "^0.19.3",
    "@iarna/toml": "^2.2.5",
    "@noble/hashes": "1.3.2",
    "as-table": "^1.0.55",
    "cacheable-request": "10.2.12",
    "camelcase": "^7.0.1",
    "chalk": "^5.3.0",
    "chokidar": "^3.5.3",
    "commander": "11.1.0",
    "debounce": "^1.2.1",
    "decomp-tarxz": "0.1.1",
    "decompress": "^4.2.1",
    "del": "7.1.0",
    "dhall-to-json-cli": "^1.7.6",
    "eslint": "8.54.0",
    "execa": "7.1.1",
    "fs-extra": "11.2.0",
    "get-folder-size": "^4.0.0",
    "glob": "^10.3.3",
    "globby": "^13.2.2",
    "got": "13.0.0",
    "log-update": "6.0.0",
    "markdown-table": "3.0.3",
    "mdast-util-from-markdown": "^2.0.0",
    "mdast-util-to-markdown": "^2.1.0",
    "minimatch": "^9.0.3",
    "ncp": "^2.0.0",
    "node-fetch": "^3.3.2",
    "octokit": "3.1.2",
    "pem-file": "^1.0.1",
    "pic-ic": "0.3.2",
    "prompts": "^2.4.2",
    "stream-to-promise": "^3.0.0",
    "string-width": "7.0.0",
    "tar": "6.2.0"
  },
  "devDependencies": {
    "@tsconfig/strictest": "2.0.2",
    "@types/debounce": "^1.2.1",
    "@types/decompress": "^4.2.4",
    "@types/fs-extra": "11.0.4",
    "@types/glob": "^8.1.0",
    "@types/ncp": "^2.0.5",
    "@types/node": "20.10.0",
    "@types/prompts": "^2.4.4",
    "@types/stream-to-promise": "^2.2.1",
    "@types/tar": "^6.1.5",
    "bun": "1.0.14",
    "esbuild": "0.19.8",
    "typescript": "5.3.2",
    "tsx": "4.6.2"
  },
  "overrides": {
    "@dfinity/agent": "^0.19.3",
    "@dfinity/identity": "^0.19.3",
    "@dfinity/principal": "^0.19.3",
    "@dfinity/candid": "^0.19.3"
  }
}
